<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/first_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/second_sec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- btn background -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="172dp"
                android:layout_height="34dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/radius_right" />

            <!-- btn views -->
            <ImageView
                android:id="@+id/imgWeek"
                android:layout_width="86dp"
                android:layout_height="34dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/week_unframe" />

            <ImageView
                android:id="@+id/imgMonth"
                android:layout_width="86dp"
                android:layout_height="34dp"
                android:layout_marginStart="85dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/month_unframe" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_gravity="right"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="28dp"
                android:textColor="#363062"
                android:textSize="12sp" />

            <!-- income and expense img views -->

            <ImageView
                android:layout_width="32dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="76dp"
                android:src="@drawable/line2" />

            <TextView
                android:layout_width="46dp"
                android:layout_height="22dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="68dp"
                android:text="@string/income"
                android:textColor="#363062"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="107dp"
                android:layout_marginTop="76dp"
                android:src="@drawable/line1" />

            <TextView
                android:layout_width="46dp"
                android:layout_height="22dp"
                android:layout_marginStart="147dp"
                android:layout_marginTop="68dp"
                android:text="@string/expense"
                android:textColor="#363062"
                android:textSize="12sp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chartLine"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                android:textSize="16sp"
                android:textColor="#BDBDBD" />

            <TextView
                android:id="@+id/right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/poppins"
                android:textSize="16sp"
                android:textColor="#BDBDBD" />

        </FrameLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
