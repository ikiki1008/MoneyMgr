<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#323232"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/selected_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/selected_month_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/selected_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginTop="20dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/white"
            android:textSize="14dp" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/frame_layout">

        <TextView
            android:id="@+id/income"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="@string/income"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/income" />

        <TextView
            android:id="@+id/income_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/income"
            android:textSize="20sp"
            android:layout_marginStart="100dp"
            android:textAlignment="center"
            android:textColor="@color/normal" />

        <ImageView
            android:id="@+id/check_income"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_back"
            android:layout_marginTop="5dp"
            android:scaleX="-1"
            android:layout_gravity="right"
            android:layout_marginEnd="20dp"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/scrollView_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/scrollView">

        <TextView
            android:id="@+id/outcome"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="@string/expense"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/outcome"/>

        <TextView
            android:id="@+id/outcome_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/income"
            android:textSize="20sp"
            android:layout_marginStart="100dp"
            android:textAlignment="center"
            android:textColor="@color/normal" />

        <ImageView
            android:id="@+id/check_outcome"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/arrow_back"
            android:layout_marginTop="5dp"
            android:scaleX="-1"
            android:layout_gravity="right"
            android:layout_marginEnd="20dp"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/btnWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="100dp"
        app:layout_constraintTop_toBottomOf="@id/scrollView_second">

        <TextView
            android:id="@+id/addBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_new_item"
            android:textSize="18sp"
            android:layout_gravity="right"
            android:textColor="@color/normal"
            />

    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
